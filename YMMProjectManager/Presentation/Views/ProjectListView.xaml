<UserControl
    x:Class="YMMProjectManager.Presentation.Views.ProjectListView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:controls="clr-namespace:YMMProjectManager.Presentation.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Loaded="OnLoaded"
    AllowDrop="True"
    PreviewDragOver="OnPreviewDragOver"
    Drop="OnDrop"
    MinWidth="320"
    MinHeight="240">

    <DockPanel Margin="8">
        <StackPanel
            Orientation="Horizontal"
            DockPanel.Dock="Top"
            Margin="0,0,0,8">
            <Button
                Content="追加"
                Width="72"
                Margin="0,0,8,0"
                Command="{Binding AddCommand}" />
            <Button
                Content="削除"
                Width="72"
                Margin="0,0,8,0"
                Command="{Binding RemoveCommand}" />
            <Button
                Content="開く"
                Width="72"
                Margin="0,0,8,0"
                Command="{Binding OpenCommand}" />
        </StackPanel>
        <StackPanel
            Orientation="Horizontal"
            DockPanel.Dock="Top"
            Margin="0,0,0,8">
            <Button
                Content="素材を再リンク"
                MinWidth="190"
                Margin="0,0,8,0"
                Command="{Binding OpenRelinkWindowCommand}" />
            <Button
                Content="サムネイル生成"
                MinWidth="180"
                Command="{Binding GenerateThumbnailsFastCommand}" />
        </StackPanel>

        <ListBox
            ItemsSource="{Binding Projects}"
            SelectedItem="{Binding SelectedProject, Mode=TwoWay}"
            MouseDoubleClick="OnProjectListMouseDoubleClick">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="0,2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="8" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <controls:ScrubThumbnailControl
                            Grid.Column="0"
                            CacheDirectory="{Binding ThumbnailCacheDirectory}" />

                        <StackPanel Grid.Column="2" VerticalAlignment="Center">
                            <TextBlock Text="{Binding EffectiveDisplayName}" FontWeight="SemiBold" />
                            <TextBlock Text="{Binding FullPath}" FontSize="11" Opacity="0.8" />
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </DockPanel>
</UserControl>
